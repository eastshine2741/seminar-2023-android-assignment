<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user_id"
            type="String" />
        <variable
            name="user_pw"
            type="String" />
        <variable
            name="operator"
            type="String" />
        <variable
            name="result"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저 정보"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user_id}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_text"/>

        <TextView
            android:id="@+id/pw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user_pw}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_text" />

        <EditText
            android:id="@+id/first_edittext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="첫 번째 수"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/operator_grid"/>
        <TextView
            android:id="@+id/operator_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{operator}"
            app:layout_constraintStart_toEndOf="@id/first_edittext"
            app:layout_constraintTop_toTopOf="@id/first_edittext"
            app:layout_constraintBottom_toBottomOf="@id/first_edittext" />
        <EditText
            android:id="@+id/second_edittext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="두 번째 수"
            app:layout_constraintStart_toEndOf="@id/operator_text"
            app:layout_constraintBottom_toTopOf="@id/operator_grid"/>
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{'='+result}"
            app:layout_constraintStart_toEndOf="@id/second_edittext"
            app:layout_constraintTop_toTopOf="@id/first_edittext"
            app:layout_constraintBottom_toBottomOf="@id/first_edittext" />

        <GridLayout
            android:id="@+id/operator_grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:id="@+id/add_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#C0DDB8"
                android:text="+"
                android:gravity="center"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/subtract_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#CF9523"
                android:text="-"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/multiply_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#D14F83"
                android:text="*"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/divide_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#5D3ABD"
                android:text="/"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>